{
	"name": "bocantino-erp",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "docker compose up -d && vite dev && docker compose down",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:compose-up": "docker compose up -d && sleep 1 && drizzle-kit push:pg",
		"test:vitest": "vitest --single-thread ",
		"test:compose-down": "docker compose down",
		"test": "npm run test:compose-up && npm run test:vitest && npm run test:compose-down",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"db-migrate": "drizzle-kit generate:pg",
		"db-shell": "docker compose exec postgres psql -U postgres -d db"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.5.3",
		"@skeletonlabs/skeleton": "2.5.1",
		"@skeletonlabs/tw-plugin": "0.2.4",
		"@sveltejs/adapter-vercel": "^2.1.0",
		"@sveltejs/kit": "^1.27.4",
		"@tabler/icons-svelte": "^2.46.0",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "0.5.10",
		"@types/bcrypt": "^5.0.2",
		"@types/better-sqlite3": "^7.6.8",
		"@types/node": "20.10.2",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"apexcharts": "^3.45.2",
		"autoprefixer": "10.4.16",
		"bcrypt": "^5.1.1",
		"better-sqlite3": "^9.2.2",
		"boxicons": "^2.1.4",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.20.6",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"jspdf": "^2.5.1",
		"jspdf-autotable": "^3.8.1",
		"postcss": "8.4.32",
		"postgres": "^3.4.3",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^4.0.5",
		"svelte-check": "^3.6.0",
		"sveltekit-superforms": "^1.11.0",
		"tailwindcss": "3.3.5",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-tailwind-purgecss": "0.1.4",
		"vitest": "^0.34.0"
	},
	"type": "module",
	"dependencies": {
		"@neondatabase/serverless": "^0.7.2",
		"@trpc/client": "^10.45.0",
		"@trpc/server": "^10.45.0",
		"drizzle-orm": "^0.29.3",
		"drizzle-tools": "0.0.5",
		"jose": "^5.2.0",
		"moment": "^2.30.1",
		"ws": "^8.16.0",
		"zod": "^3.22.4"
	}
}